@inject NavigationManager nav
<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" IconColor="Color.Warning">Home</MudNavLink> 
    <MudNavLink Href="About" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Face" IconColor="Color.Primary">About</MudNavLink>
    <MudNavLink Href="FAQ" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.QuestionAnswer" IconColor="Color.Primary">FAQ's</MudNavLink>
    <MudNavLink Href="Donation" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.HealthAndSafety" IconColor="Color.Success">Generosity</MudNavLink>
    <MudDivider Class="my-2" />
    @* <MudPaper Elevation="0" Class="d-flex ml-4 flex-grow-1 gap-4" @onclick="()=>OpenNewPage(unityUrl)">
        <MudImage Src="images/social/unity.svg" Height="20"/>
        <MudText>Unity</MudText>
    </MudPaper> *@
    <MudNavLink Href="unity" Match="NavLinkMatch.Prefix" IconColor="Color.Secondary" Icon="@Icons.Custom.Uncategorized.ChessQueen">Unity</MudNavLink>
    <MudNavLink Href="Godot" Match="NavLinkMatch.Prefix" Icon="@Icons.Custom.Uncategorized.ChessRook" IconColor="Color.Tertiary">Godot</MudNavLink>
    <MudDivider Class="my-2" />
    @* Try To Do this in recursive *@
    <MudNavGroup Title="@unity.Name" Icon="@Icons.Material.Filled.AccountTree" IconColor="@unity.IconImageColor" Expanded="false">
        @foreach (var topics in unity.ListOfNavClass)
        {
            <MudNavGroup Title="@topics.Name" Icon="@topics.IconImage" IconColor="@topics.IconImageColor" Expanded="false">
                @foreach (var chapters in topics.ListOfNavClass)
                {
                    <MudNavGroup Title="@chapters.Name" Icon="@chapters.IconImage" IconColor="@chapters.IconImageColor" Expanded="false">
                        @foreach (var subchapter in chapters.ListOfNavClass)
                        {
                            <MudNavLink Href="@subchapter.Link"
                                        Icon="@subchapter.IconImage"
                                        IconColor="Color.Success">
                                @subchapter.Name
                            </MudNavLink>
                        }
                    </MudNavGroup>

                }
            </MudNavGroup>
        }
    </MudNavGroup>
    <MudDivider Class="my-2" /> 
    <MudNavGroup Title="@godot.Name" Icon="@Icons.Material.Filled.AccountTree" IconColor="@godot.IconImageColor" Expanded="false">
        @foreach (var topics in godot.ListOfNavClass)
        {
            <MudNavGroup Title="@topics.Name" Icon="@topics.IconImage" IconColor="@topics.IconImageColor" Expanded="false">
                @foreach (var chapters in topics.ListOfNavClass)
                {
                    <MudNavGroup Title="@chapters.Name" Icon="@chapters.IconImage" IconColor="@chapters.IconImageColor" Expanded="false">
                        @foreach (var subchapter in chapters.ListOfNavClass)
                        {
                            <MudNavLink Href="@subchapter.Link"
                                        Icon="@subchapter.IconImage"
                                        IconColor="Color.Success">
                                @subchapter.Name
                            </MudNavLink>
                        }
                    </MudNavGroup>

                }
            </MudNavGroup>
        }
    </MudNavGroup>

    <MudDivider Class="my-2" />
    <MudNavLink  
        Match="NavLinkMatch.Prefix" 
        IconColor="Color.Secondary"
                Icon="@Icons.Custom.Brands.MicrosoftVisualStudio" Disabled="true">
                .NET @Environment.Version.ToString()
                </MudNavLink> 
</MudNavMenu>

